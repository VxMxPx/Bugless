	width: 100%
	clear: both
	float: left
	margin-bottom: 30px
	color: c_link_outside
	.left a
		margin-left: 10px
		&:last-child
			margin-left: 0
	.right a
		margin-right: 10px
		&:last-child
			margin-right: 0

#login
#forgot_password
#register
	.field
		&.cancel
		&.forgot_password
			margin-bottom: 0
			float: left
			width: 58%
		&.button
			float: right
			width: 40%
			button
				float: right